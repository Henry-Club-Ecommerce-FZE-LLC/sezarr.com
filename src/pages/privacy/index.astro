---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { SITE } from "../../config/site";
const url = `${SITE.URL}/privacy/`;
---
<BaseLayout title="Privacy Policy" description="Privacy Policy for Insurance Insights USA" {url}>
  <section class="mx-auto max-w-[var(--max-w)] px-4 py-10 prose">
    <h1>Privacy Policy</h1>
    <p>We respect your privacy. This site uses cookies for functionality and analytics. See our consent banner to manage preferences. We comply with CPRA opt-out for California residents.</p>
  </section>
</BaseLayout>
