---
import type { CollectionEntry } from 'astro:content';
const { author } = Astro.props as { author: CollectionEntry<'authors'> };
const a = author.data;
---
<aside class="mt-10 rounded-lg border bg-white/60 dark:bg-gray-800/60 p-4 flex gap-4 items-start">
  {a.avatar && <img src={a.avatar} alt={a.name} width="64" height="64" class="rounded-full ring-1 ring-gray-200" loading="lazy" />}
  <div>
    <div class="font-semibold">{a.name}</div>
    {a.title && <div class="text-xs text-gray-500 dark:text-gray-400">{a.title}</div>}
    <p class="mt-2 text-sm leading-relaxed">{a.bio}</p>
    {a.credentials?.length ? (
      <ul class="mt-2 flex flex-wrap gap-2 text-xs text-gray-600 dark:text-gray-300">
        {a.credentials.map((c) => <li class="px-2 py-0.5 bg-gray-100 dark:bg-gray-700 rounded">{c}</li>)}
      </ul>
    ) : null}
    {a.sameAs?.length ? (
      <div class="mt-2 text-xs">
        {a.sameAs.map((u) => <a href={u} rel="me noopener" class="mr-3 underline">Profile</a>)}
      </div>
    ) : null}
  </div>
</aside>
