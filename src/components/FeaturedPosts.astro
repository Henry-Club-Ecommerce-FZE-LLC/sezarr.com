---
import { getCollection } from 'astro:content';
import Button from './Button.astro';
const posts = (await getCollection('posts')).slice(0, 3);
---
<section class="py-16">
  <div class="mx-auto max-w-5xl px-4">
    <h2 class="text-3xl font-bold text-center">Latest Insights</h2>
    <div class="grid md:grid-cols-3 gap-8 mt-10">
      {posts.map(post => (
        <a href={`/posts/${post.slug}`} class="block border rounded-lg overflow-hidden group hover:shadow-lg transition">
          {post.data.heroImage && <img src={post.data.heroImage} alt={post.data.title} class="w-full h-40 object-cover" />}
          <div class="p-4">
            <h3 class="font-semibold">{post.data.title}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400 mt-2">{post.data.description}</p>
          </div>
        </a>
      ))}
    </div>
    <div class="text-center mt-10">
      <Button href="/posts">View All Guides</Button>
    </div>
  </div>
</section>
