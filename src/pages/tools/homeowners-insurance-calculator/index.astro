---
import BaseLayout from '../../../layouts/SimpleBaseLayout.astro';
import HomeownersInsuranceCalculator from '../../../components/calculators/HomeownersInsuranceCalculator.astro';
import CalculatorSidebar from '../../../components/CalculatorSidebar.astro';
import CalculatorRightSidebar from '../../../components/CalculatorRightSidebar.astro';
import AdSenseBlock from '../../../components/AdSenseBlock.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { SITE } from "../../../config/site";

const title = "Homeowners Insurance Calculator 2024 - Instant Quotes & Coverage Estimates | Sezarr";
const description = "Calculate homeowners insurance costs with our advanced calculator. Get live quotes, compare coverage options, and find the best rates for home insurance from top-rated companies.";
const keywords = "homeowners insurance calculator, home insurance cost calculator, property insurance rates, dwelling coverage calculator, homeowners premium estimator, house insurance quotes, property insurance comparison, home insurance coverage calculator";

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Insurance Tools', href: '/tools/' },
  { label: 'Homeowners Calculator', href: '/tools/homeowners-insurance-calculator/' }
];

const siteUrl = SITE.URL;
const currentUrl = `${siteUrl}/tools/homeowners-insurance-calculator/`;

// Comprehensive Schema Markup for Enhanced SEO
const schema = [
  {
    "@context": "https://schema.org",
    "@type": "WebApplication",
    "@id": `${currentUrl}#webapp`,
    "name": "Homeowners Insurance Calculator",
    "description": "Advanced homeowners insurance calculator providing instant quotes, coverage recommendations, and premium estimates from top insurance companies",
    "url": currentUrl,
    "applicationCategory": "FinanceApplication",
    "operatingSystem": "Any",
    "browserRequirements": "Requires JavaScript",
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "USD",
      "availability": "https://schema.org/InStock"
    },
    "featureList": [
      "Instant premium calculations",
      "Coverage recommendations", 
      "Multiple insurance company quotes",
      "Personalized risk assessment",
      "Real-time rate updates"
    ],
    "provider": {
      "@type": "Organization",
      "name": "Sezarr Insurance",
      "url": siteUrl
    }
  },
  {
    "@context": "https://schema.org",
    "@type": "HowTo",
    "name": "How to Calculate Homeowners Insurance Premium",
    "description": "Step-by-step guide to calculate your homeowners insurance premium and coverage needs",
    "image": `${siteUrl}/images/homeowners-insurance-calculator-guide.jpg`,
    "totalTime": "PT5M",
    "estimatedCost": {
      "@type": "MonetaryAmount",
      "currency": "USD",
      "value": "0"
    },
    "supply": [
      {
        "@type": "HowToSupply",
        "name": "Home details (size, age, construction type)"
      },
      {
        "@type": "HowToSupply", 
        "name": "Property value and ZIP code"
      },
      {
        "@type": "HowToSupply",
        "name": "Desired coverage amounts"
      }
    ],
    "step": [
      {
        "@type": "HowToStep",
        "name": "Enter Home Information",
        "text": "Input your home's square footage, construction type, year built, and ZIP code for accurate pricing."
      },
      {
        "@type": "HowToStep", 
        "name": "Select Coverage Options",
        "text": "Choose your desired dwelling coverage, personal property limits, and liability protection amounts."
      },
      {
        "@type": "HowToStep",
        "name": "Add Safety Features",
        "text": "Select installed safety features like security systems, smoke detectors, and sprinkler systems for discounts."
      },
      {
        "@type": "HowToStep",
        "name": "Review Quote Results", 
        "text": "Compare instant quotes from multiple insurance companies and coverage recommendations."
      }
    ]
  },
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {
        "@type": "Question",
        "name": "How much does homeowners insurance cost on average?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "The average cost of homeowners insurance in the US is $1,383 per year, but rates vary significantly based on location, home value, coverage amounts, and risk factors. Use our calculator to get personalized estimates."
        }
      },
      {
        "@type": "Question",
        "name": "What factors affect homeowners insurance premiums?",
        "acceptedAnswer": {
          "@type": "Answer", 
          "text": "Key factors include home value, location and climate risks, construction materials, age of home, safety features, claims history, credit score, and chosen coverage amounts and deductibles."
        }
      },
      {
        "@type": "Question",
        "name": "How much dwelling coverage do I need?",
        "acceptedAnswer": {
          "@type": "Answer",
          "text": "Dwelling coverage should equal your home's replacement cost, typically 80-100% of its rebuild value. Our calculator estimates this based on your home's specifications and local construction costs."
        }
      }
    ]
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Insurance Hub",
        "item": siteUrl
      },
      {
        "@type": "ListItem", 
        "position": 2,
        "name": "Insurance Calculators",
        "item": `${siteUrl}/tools/`
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "Homeowners Insurance Calculator",
        "item": currentUrl
      }
    ]
  }
];
