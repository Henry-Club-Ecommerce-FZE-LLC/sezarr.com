              <ul class="space-y-3 list-none" role="list">
                <li><a href="/" class="block px-4 py-3 rounded-md text-base font-medium text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors min-h-[44px] flex items-center" aria-current={currentPath === '/' ? 'page' : undefined}>Home</a></li>
                
