---
import Button from './Button.astro';
import ResponsiveImage from './ResponsiveImage.astro';
import { SITE } from '../config/site';
---
<section class="relative min-h-screen flex items-center justify-center overflow-hidden" role="banner" aria-labelledby="hero-heading">
  <!-- Animated Background with Multiple Layers -->
  <div class="absolute inset-0 z-0">
    <!-- Base Image -->
    <ResponsiveImage
      src="/images/hero-insurance"
      alt="Professional insurance coverage and protection"
      width={1920}
      height={1080}
      priority={true}
      loading="eager"
      class="w-full h-full object-cover opacity-30"
    />
    
    <!-- Animated Gradient Overlays -->
    <div class="absolute inset-0 bg-gradient-to-br from-blue-900/90 via-purple-900/80 to-indigo-900/90 animate-gradient-shift"></div>
    <div class="absolute inset-0 bg-gradient-to-tr from-transparent via-blue-600/20 to-purple-600/30 animate-gradient-pulse"></div>
    
    <!-- Floating Geometric Shapes -->
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-blue-500/20 rounded-full blur-3xl animate-float-1"></div>
    <div class="absolute top-3/4 right-1/4 w-48 h-48 bg-purple-500/20 rounded-full blur-3xl animate-float-2"></div>
    <div class="absolute top-1/2 left-3/4 w-32 h-32 bg-indigo-500/30 rounded-full blur-2xl animate-float-3"></div>
    
    <!-- Particle Effects -->
    <div class="absolute inset-0 opacity-30">
      <div class="absolute top-20 left-20 w-2 h-2 bg-white/60 rounded-full animate-twinkle-1"></div>
      <div class="absolute top-40 right-32 w-1 h-1 bg-blue-300/80 rounded-full animate-twinkle-2"></div>
      <div class="absolute bottom-32 left-32 w-1.5 h-1.5 bg-purple-300/70 rounded-full animate-twinkle-3"></div>
      <div class="absolute bottom-20 right-20 w-1 h-1 bg-indigo-300/60 rounded-full animate-twinkle-1"></div>
      <div class="absolute top-1/3 left-1/2 w-1 h-1 bg-white/50 rounded-full animate-twinkle-2"></div>
    </div>
  </div>
  
  <!-- Hero Content with Glassmorphism -->
  <div class="relative z-10 px-4 text-center max-w-6xl mx-auto">
    <!-- Glassmorphism Container -->
    <div class="backdrop-blur-md bg-white/10 dark:bg-white/5 rounded-3xl border border-white/20 p-12 shadow-2xl hero-glass">
      <div class="space-y-8">
        <!-- Badge -->
        <div class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-500/80 to-purple-500/80 backdrop-blur-sm rounded-full border border-white/20 text-white text-sm font-semibold animate-pulse-glow">
          <svg class="w-4 h-4 mr-2 animate-spin-slow" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"/>
          </svg>
          #1 Insurance Guide Platform 2025
        </div>

        <!-- Main Heading with Advanced Typography -->
        <h1 id="hero-heading" class="text-6xl lg:text-8xl font-bold leading-tight lcp-text">
          <span class="block mb-4">
            <span class="bg-gradient-to-r from-blue-200 via-white to-purple-200 bg-clip-text text-transparent animate-gradient-text">
              Sezarr
            </span>
          </span>
          <span class="block text-4xl lg:text-5xl font-light text-white/90">
            Smart Insurance
            <span class="bg-gradient-to-r from-blue-300 to-purple-300 bg-clip-text text-transparent font-bold">
              Decisions
            </span>
          </span>
        </h1>

        <!-- Enhanced Subtitle -->
        <p class="text-xl lg:text-2xl text-blue-100 dark:text-blue-200 max-w-4xl mx-auto leading-relaxed font-light">
          Compare rates, understand coverage, and make 
          <span class="font-semibold text-white">expert-backed decisions</span> 
          with our AI-powered insurance tools and comprehensive guides.
        </p>

        <!-- Modern CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mt-12">
          <a href="/tools" class="group relative px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-600 text-white font-semibold rounded-2xl shadow-2xl hover:shadow-blue-500/50 transition-all duration-300 transform hover:scale-105 hover:-translate-y-1">
            <span class="relative z-10 flex items-center">
              <svg class="w-6 h-6 mr-3 group-hover:rotate-12 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
              Get Smart Quotes
            </span>
            <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-blue-400 to-purple-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300 blur-xl"></div>
          </a>
          
          <a href="/posts" class="group relative px-8 py-4 bg-white/10 backdrop-blur-sm text-white font-semibold rounded-2xl border border-white/30 hover:bg-white/20 transition-all duration-300 transform hover:scale-105">
            <span class="flex items-center">
              <svg class="w-6 h-6 mr-3 group-hover:scale-110 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
              Expert Guides
            </span>
          </a>
        </div>

        <!-- Trust Indicators -->
        <div class="flex flex-wrap justify-center items-center gap-8 mt-12 text-white/80 text-sm">
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            100% Free Tools
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Expert Reviewed
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 mr-2 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 6a3 3 0 013-3h10a1 1 0 01.8 1.6L14.25 8l2.55 3.4A1 1 0 0116 13H6a1 1 0 00-1 1v3a1 1 0 11-2 0V6z" clip-rule="evenodd"/>
            </svg>
            Updated Daily
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-10">
    <div class="flex flex-col items-center text-white/70 animate-bounce">
      <span class="text-sm mb-2">Explore More</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </div>
</section>

<style>
  /* Advanced Animations */
  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes gradient-pulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.7; }
  }

  @keyframes float-1 {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-30px) rotate(120deg); }
    66% { transform: translateY(15px) rotate(240deg); }
  }

  @keyframes float-2 {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(25px) rotate(-120deg); }
    66% { transform: translateY(-20px) rotate(-240deg); }
  }

  @keyframes float-3 {
    0%, 100% { transform: translateY(0px) scale(1); }
    50% { transform: translateY(-40px) scale(1.1); }
  }

  @keyframes twinkle-1 {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.5); }
  }

  @keyframes twinkle-2 {
    0%, 100% { opacity: 0.5; transform: scale(1); }
    30% { opacity: 1; transform: scale(1.2); }
    70% { opacity: 0.7; transform: scale(0.8); }
  }

  @keyframes twinkle-3 {
    0%, 100% { opacity: 0.4; transform: scale(1) rotate(0deg); }
    50% { opacity: 0.9; transform: scale(1.3) rotate(180deg); }
  }

  @keyframes gradient-text {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes pulse-glow {
    0%, 100% { box-shadow: 0 0 20px rgba(59, 130, 246, 0.3); }
    50% { box-shadow: 0 0 40px rgba(147, 51, 234, 0.5), 0 0 60px rgba(59, 130, 246, 0.3); }
  }

  @keyframes spin-slow {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Animation Classes */
  .animate-gradient-shift {
    background-size: 400% 400%;
    animation: gradient-shift 8s ease infinite;
  }

  .animate-gradient-pulse {
    animation: gradient-pulse 4s ease-in-out infinite;
  }

  .animate-float-1 {
    animation: float-1 20s ease-in-out infinite;
  }

  .animate-float-2 {
    animation: float-2 15s ease-in-out infinite;
  }

  .animate-float-3 {
    animation: float-3 12s ease-in-out infinite;
  }

  .animate-twinkle-1 {
    animation: twinkle-1 3s ease-in-out infinite;
  }

  .animate-twinkle-2 {
    animation: twinkle-2 2.5s ease-in-out infinite;
  }

  .animate-twinkle-3 {
    animation: twinkle-3 4s ease-in-out infinite;
  }

  .animate-gradient-text {
    background-size: 400% 400%;
    animation: gradient-text 6s ease infinite;
  }

  .animate-pulse-glow {
    animation: pulse-glow 3s ease-in-out infinite;
  }

  .animate-spin-slow {
    animation: spin-slow 3s linear infinite;
  }

  /* Glassmorphism Effect */
  .hero-glass {
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 25px 45px rgba(0, 0, 0, 0.1);
  }

  /* Performance Optimizations */
  .lcp-text {
    display: block;
    text-rendering: optimizeSpeed;
    font-display: swap;
  }
  
  /* 3D Transform Performance */
  section {
    contain: layout style;
    transform: translateZ(0);
    backface-visibility: hidden;
  }

  /* Smooth Scrolling */
  @media (prefers-reduced-motion: no-preference) {
    html {
      scroll-behavior: smooth;
    }
  }

  /* Accessibility - Respect motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .animate-gradient-shift,
    .animate-gradient-pulse,
    .animate-float-1,
    .animate-float-2,
    .animate-float-3,
    .animate-twinkle-1,
    .animate-twinkle-2,
    .animate-twinkle-3,
    .animate-gradient-text,
    .animate-pulse-glow,
    .animate-spin-slow,
    .animate-bounce {
      animation: none;
    }
  }
</style>
