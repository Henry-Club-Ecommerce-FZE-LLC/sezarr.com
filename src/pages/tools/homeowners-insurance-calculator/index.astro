---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import HomeownersInsuranceCalculator from '../../../components/calculators/HomeownersInsuranceCalculator.astro';
import AdSenseBlock from '../../../components/AdSenseBlock.astro';
import Breadcrumbs from '../../../components/Breadcrumbs.astro';
import { SITE } from "../../../config/site";

const title = "Homeowners Insurance Calculator - Get Instant Quotes & Coverage Estimates | Sezarr";
const description = "Calculate homeowners insurance costs with our advanced calculator. Get personalized quotes, compare coverage options, and find the best rates for your home insurance needs.";
const keywords = "homeowners insurance calculator, home insurance cost, property insurance calculator, dwelling coverage calculator, homeowners premium estimator";

const breadcrumbItems = [
  { label: 'Home', href: '/' },
  { label: 'Tools', href: '/tools/' },
  { label: 'Homeowners Insurance Calculator', href: '/tools/homeowners-insurance-calculator/' }
];

const siteUrl = SITE.URL;
const currentUrl = `${siteUrl}/tools/homeowners-insurance-calculator/`;

const schema = [
  {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": `${currentUrl}#webpage`,
    "url": currentUrl,
    "name": title,
    "description": description,
    "inLanguage": "en-US",
    "isPartOf": {
      "@type": "WebSite",
      "@id": `${siteUrl}#website`,
      "url": siteUrl,
      "name": "Sezarr Insurance"
    }
  },
  {
    "@context": "https://schema.org",
    "@type": "SoftwareApplication",
    "name": "Homeowners Insurance Calculator",
    "description": "Advanced calculator for estimating homeowners insurance premiums and coverage needs",
    "url": currentUrl,
    "operatingSystem": "Any",
    "applicationCategory": "FinanceApplication",
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "USD"
    }
  }
];
---

<BaseLayout 
  title={title} 
  description={description} 
  keywords={keywords}
  schema={schema}
>
  <main>
    <!-- Breadcrumbs -->
    <section class="bg-gray-50 dark:bg-gray-900 py-4">
      <div class="container mx-auto px-4">
        <Breadcrumbs items={breadcrumbItems} />
      </div>
    </section>

    <!-- Calculator Section -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        <div class="text-center mb-8">
          <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
            Homeowners Insurance Calculator
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
            Get instant homeowners insurance quotes with our advanced calculator. Compare coverage options, 
            calculate premiums, and find the best protection for your home.
          </p>
        </div>

        <!-- AdSense Block -->
        <AdSenseBlock slot="top-content" />
        
        <!-- Calculator Component -->
        <div class="max-w-6xl mx-auto">
          <HomeownersInsuranceCalculator />
        </div>
      </div>
    </section>

    <!-- Educational Content -->
    <section class="py-12 bg-gray-50 dark:bg-gray-900">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-center text-gray-900 dark:text-white mb-8">
            Understanding Homeowners Insurance
